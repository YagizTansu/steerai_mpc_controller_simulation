<launch>
  <!-- NavSat Transform: Converts GPS (Lat/Lon) to Odometry (X/Y) -->
  <node pkg="robot_localization" type="navsat_transform_node" name="navsat_transform_node" respawn="true">
    <param name="frequency" value="30"/>
    <param name="magnetic_declination_radians" value="0"/>
    <param name="broadcast_cartesian_transform" value="true"/>
    <param name="wait_for_datum" value="false"/>
    
    <remap from="/imu/data" to="/gem/imu" />
    <remap from="/gps/fix" to="/gem/gps/fix" />
    <remap from="/odometry/filtered" to="/odometry/filtered" />
  </node>

  <!-- EKF Localization: Fuses Odom, IMU, and GPS-Odom -->
  <node pkg="robot_localization" type="ekf_localization_node" name="ekf_se_map" clear_params="true">
    <rosparam command="load" file="$(find steerai_mpc)/config/ekf_params.yaml" />
    <!-- Remapping output to a standard topic if needed, though config uses internal names -->
    <remap from="odometry/filtered" to="odometry/filtered"/>
  </node>
</launch>
