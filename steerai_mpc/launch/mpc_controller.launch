<?xml version="1.0"?>
<launch>
  <!-- MPC Controller Launch File with Configuration Management -->
  
  <!-- Load MPC Controller Parameters -->
  <node name="mpc_controller" pkg="steerai_mpc" type="mpc_controller.py" output="screen">
    <!-- Load main MPC configuration -->
    <rosparam file="$(find steerai_mpc)/config/mpc_params.yaml" command="load" />
    
    <!-- Load Path Manager configuration -->
    <rosparam file="$(find steerai_mpc)/config/path_params.yaml" command="load" ns="path_manager" />
  </node>
  
  <!-- Optional: Launch rqt_reconfigure for easy parameter tuning -->
  <!-- Uncomment the line below to automatically open the dynamic reconfigure GUI -->
  <!-- <node name="rqt_reconfigure" pkg="rqt_reconfigure" type="rqt_reconfigure" /> -->

</launch>
